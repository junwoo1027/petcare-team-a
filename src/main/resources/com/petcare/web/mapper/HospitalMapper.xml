<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.petcare.web.mapper.HospitalMapper">
 
	<select id="listHospital" resultType="java.util.ArrayList">
		SELECT *
		FROM HOSPITAL
	</select>
	
	<select id="searchHospital" resultType="java.util.ArrayList">
		SELECT *
		FROM HOSPITAL
		WHERE hospital_name = #{hospitalName} <!-- where ì ˆ -->
	</select>
	
	<select id="viewHospital" resultType="com.petcare.web.domain.HospitalVO">
		SELECT *
		FROM HOSPITAL
		WHERE hospital_id = #{hospitalId}
	</select>
	
</mapper>